<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <SDEngineRootDir>D:\Project\SDEngine\</SDEngineRootDir>
    <SDLibraryDirs>$(SDEngineRootDir)Bin\Library\Windows\$(Platform)\$(Configuration);</SDLibraryDirs>
    <GLMIncludeDirs>$(SDEngineRootDir)\ThirdParty\GLM</GLMIncludeDirs>
    <SDLibrary>SDEngine.lib;</SDLibrary>
    <SDGLFWAppLib>SDEngine_GLFWApplication.lib</SDGLFWAppLib>
  </PropertyGroup>
  <PropertyGroup>
    <LibraryPath>$(SDLibraryDirs);$(LibraryPath)</LibraryPath>
    <IncludePath>$(VC_IncludePath);$(WindowsSDK_IncludePath);$(SDIncludeDirs);</IncludePath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(SDEngineRootDir)SourceCode\include\;$(SDEngineRootDir)SourceCode\include\Math;$(SDEngineRootDir)SourceCode\include\Basic;$(SDEngineRootDir)SourceCode\include\Basic\LogManager;$(SDEngineRootDir)SourceCode\include\Basic\LogManager\Windows;$(SDEngineRootDir)SourceCode\include\Basic\Timer;$(SDEngineRootDir)SourceCode\include\Basic\Timer\Windows;$(SDEngineRootDir)SourceCode\include\Basic\FileSystem;$(SDEngineRootDir)SourceCode\include\Basic\FileSystem\Windows;$(SDEngineRootDir)SourceCode\include\Basic\EventSystem;$(SDEngineRootDir)SourceCode\include\Basic\Application;$(SDEngineRootDir)SourceCode\include\Basic\Object;$(SDEngineRootDir)SourceCode\include\Graphics;$(SDEngineRootDir)SourceCode\include\Graphics\Resolution;$(SDEngineRootDir)SourceCode\include\Graphics\Manager;$(SDEngineRootDir)SourceCode\include\Graphics\ManagerIdentity;$(SDEngineRootDir)SourceCode\include\Graphics\Manager\OpenGL4;$(SDEngineRootDir)SourceCode\include\Graphics\Manager\Vulkan;$(SDEngineRootDir)SourceCode\include\Graphics\Manager\Vulkan\Core;$(SDEngineRootDir)SourceCode\include\Graphics\ManagerParam;$(SDEngineRootDir)SourceCode\include\Graphics\ManagerParam\OpenGL4;$(SDEngineRootDir)SourceCode\include\Graphics\ManagerParam\Vulkan;$(SDEngineRootDir)SourceCode\include\Graphics\ImageLoader;$(SDEngineRootDir)SourceCode\include\Graphics\ImageLoader\Windows;$(SDEngineRootDir)SourceCode\include\Graphics\Vec;$(SDEngineRootDir)SourceCode\include\Graphics\VertexBuffer;$(SDEngineRootDir)SourceCode\include\Graphics\Texture;$(SDEngineRootDir)SourceCode\include\Application;$(GLMIncludeDirs);%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
    <PostBuildEvent>
      <Command>xcopy /y "$(SDEngineRootDir)ThirdParty\GLEW\bin\$(Configuration)\$(Platform)\glew32.dll" "$(OutDir)"
xcopy /y "$(SDEngineRootDir)ThirdParty\GLFW\bin\$(Platform)\$(Configuration)\glfw3.dll" "$(OutDir)"
xcopy /y "$(SDEngineRootDir)ThirdParty\Vulkan\bin\vulkan-1.dll" "$(OutDir)"
xcopy /y "$(SDEngineRootDir)ThirdParty\DevIL\lib\$(Platform)\unicode\DevIL.dll" "$(OutDir)"
xcopy /y "$(SDEngineRootDir)ThirdParty\DevIL\lib\$(Platform)\unicode\ILU.dll" "$(OutDir)"
xcopy /y "$(SDEngineRootDir)Bin\Library\Windows\$(Platform)\$(Configuration)\SDEngine.dll" "$(OutDir)"</Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="SDEngineRootDir">
      <Value>$(SDEngineRootDir)</Value>
    </BuildMacro>
    <BuildMacro Include="SDLibraryDirs">
      <Value>$(SDLibraryDirs)</Value>
    </BuildMacro>
    <BuildMacro Include="GLMIncludeDirs">
      <Value>$(GLMIncludeDirs)</Value>
    </BuildMacro>
    <BuildMacro Include="SDLibrary">
      <Value>$(SDLibrary)</Value>
    </BuildMacro>
    <BuildMacro Include="SDGLFWAppLib">
      <Value>$(SDGLFWAppLib)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>